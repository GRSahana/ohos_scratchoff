<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    >

    <DependentLayout
        ohos:id="$+id:scratch_view_behind"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="#818B8D" >

        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:center_in_parent="true"
            ohos:text="REVEALED!"
            ohos:text_color="#88FFFFFF"
            ohos:text_size="20fp" />

        <Button
            ohos:id="$+id:scratch_button"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:center_in_parent="true"
            ohos:padding="16dip"
            ohos:text="Reset"
            ohos:text_color="#88FFFFFF"
            ohos:text_size="20fp"
            ohos:align_parent_bottom="true"
            ohos:horizontal_center="true"
            ohos:bottom_margin="22dip"
            />

    </DependentLayout>

    <com.jackpocket.scratchoff.views.ScratchableLinearLayout
        ohos:id="$+id:scratch_view"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:background_element="#3C9ADF"
        ohos:orientation="vertical"
        ohos:layout_alignment="center">

        <Image
            ohos:width="100vp"
            ohos:height="100vp"
            ohos:image_src="$graphic:ic_touch_indicator"
            ohos:background_element="#FFFFFF"/>

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:center_in_parent="true"
            ohos:top_padding="24dip"
            ohos:text="SCRATCH ME"
            ohos:text_color="#FFFFFF"
            ohos:text_size="20fp"
           />

    </com.jackpocket.scratchoff.views.ScratchableLinearLayout>

    <Text
        ohos:id="$+id:scratch_value_title"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:align_parent_top="true"
        ohos:horizontal_center="true"
        ohos:top_margin="24dip"
        ohos:text="Scratched 0%"
        ohos:text_color="#FFFFFF"
        ohos:text_size="12dip" />

</DependentLayout>
